<div class="mx-auto max-w-3xl space-y-8">
  <div>
    <h1 class="text-3xl font-bold text-white">Focus Mode</h1>
    <p class="mt-1 text-gray-400">25 minutes of work. No distractions. No excuses.</p>
  </div>

  <!-- Timer -->
  <div class="rounded-xl border border-gray-800 bg-gray-900 p-8 text-center"
       data-controller="timer"
       data-timer-duration-value="1500"
       data-timer-break-duration-value="300"
       data-timer-active-session-value="<%= @active_session&.id || '' %>"
       data-timer-stop-url-value="<%= @active_session ? stop_focus_session_path(@active_session) : '' %>">

    <div class="text-7xl font-mono font-bold text-white tabular-nums" data-timer-target="display">
      25:00
    </div>

    <p class="mt-2 text-sm text-gray-400" data-timer-target="label">Ready to focus</p>

    <div class="mt-6" id="focus-controls">
      <%= render partial: "focus_sessions/controls", locals: { active_session: @active_session } %>
    </div>
  </div>

  <!-- Session History -->
  <div>
    <h2 class="text-lg font-semibold text-white mb-4">Session History</h2>
    <% if @sessions.any? %>
      <div class="space-y-2" id="session-history">
        <% @sessions.select(&:ended_at).each do |session| %>
          <%= render partial: "focus_sessions/session_row", locals: { session: session } %>
        <% end %>
      </div>
    <% else %>
      <div class="rounded-xl border border-gray-800 bg-gray-900 p-6 text-center">
        <p class="text-gray-400">No sessions yet. Hit start and prove you can focus.</p>
      </div>
    <% end %>
  </div>
</div>
