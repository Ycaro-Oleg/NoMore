<div class="mx-auto max-w-2xl space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-white"><%= @commitment.title %></h1>
    <span class="inline-flex items-center rounded-full px-3 py-1 text-sm font-medium
      <%= case @commitment.status
          when 'active' then 'bg-blue-900/50 text-blue-300 border border-blue-700/50'
          when 'completed' then 'bg-green-900/50 text-green-300 border border-green-700/50'
          when 'failed' then 'bg-red-900/50 text-red-300 border border-red-700/50'
          end %>">
      <%= @commitment.status.capitalize %>
    </span>
  </div>

  <div class="rounded-xl border border-gray-800 bg-gray-900 p-6 space-y-4">
    <% if @commitment.description.present? %>
      <div>
        <p class="text-xs font-medium uppercase tracking-wider text-gray-500">Description</p>
        <p class="mt-1 text-gray-300"><%= @commitment.description %></p>
      </div>
    <% end %>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <p class="text-xs font-medium uppercase tracking-wider text-gray-500">Category</p>
        <p class="mt-1 text-gray-300"><%= @commitment.category.capitalize %></p>
      </div>
      <div>
        <p class="text-xs font-medium uppercase tracking-wider text-gray-500">Deadline</p>
        <p class="mt-1 text-gray-300 <%= 'text-red-400' if @commitment.active? && @commitment.deadline < 24.hours.from_now %>">
          <%= @commitment.deadline.strftime("%b %d, %Y at %I:%M %p") %>
        </p>
      </div>
      <div>
        <p class="text-xs font-medium uppercase tracking-wider text-gray-500">Created</p>
        <p class="mt-1 text-gray-300"><%= @commitment.created_at.strftime("%b %d, %Y") %></p>
      </div>
      <% if @commitment.completed_at.present? %>
        <div>
          <p class="text-xs font-medium uppercase tracking-wider text-gray-500">Completed</p>
          <p class="mt-1 text-green-400"><%= @commitment.completed_at.strftime("%b %d, %Y at %I:%M %p") %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex gap-3">
    <% if @commitment.active? %>
      <%= button_to "Mark Complete", complete_commitment_path(@commitment), method: :patch,
          class: "rounded-lg bg-green-600 px-6 py-3 text-sm font-semibold text-white hover:bg-green-500 transition cursor-pointer" %>
    <% end %>
    <%= link_to "Back to Dashboard", root_path, class: "rounded-lg border border-gray-700 px-6 py-3 text-sm text-gray-300 hover:bg-gray-800 transition" %>
  </div>
</div>
